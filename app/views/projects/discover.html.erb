<div class="container">
  <h1>Discover your project</h1>
  <hr>
  <div class="category-list">
    <h4>1. select category</h4>
    <%- id = 1 %>
    <% Rails.application.config.categories.each_with_index do |category, i| %>
      <a href="#/<%= id %>" class="btn btn-default category" id="<%= id %>">
        <span class="before"><%= category %></span>
        <span class="after"><%= category_count[i] %></span>
      </a>
      <%- id = id + 1 %>  
    <% end %>
  </div>  
  
  <div class="sort-options">
    <h4>2. sort by</h4>
    <div class="sort btn btn-default" data-sort="default" id="newest">Newest</div>
    <div class="sort btn btn-default" data-sort="percentage:desc">Percentage</div>
    <div class="sort btn btn-default" data-sort="fund:desc">Pledge</div>
    <div class="sort btn btn-default" data-sort="days:asc">End date</div>
  </div> 
  <hr> 
  <div class="current-result">
  </div>  
</div>
<script>
  $(function() {
    Discover.initialize();
  });
</script>
